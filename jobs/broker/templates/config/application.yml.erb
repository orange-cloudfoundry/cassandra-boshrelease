---
logging:
  level: DEBUG

management:
  context-path: /admin

pidfile: /var/vcap/sys/run/broker/broker.pid

security:
  user:
    name: <%= p('broker.user') %>
    password: <%= p('broker.password') %>

spring:
  main:
    show-banner: true
  data:
    cassandra:
      password: <%= p('cassandra_seed.admin_password') %>
      contact-points: <%
link('nodes').instances.each do |instance|
    if instance.p('cassandra_seed.is_seed')
        %><%= instance.address %>,<%
    end
end %>
      single-contact-points: <%= link('nodes').instances[0].address %>
      username: cassandra
      port: 9042
