[authentication]
username = cassandra
password = <%= link("seeds").p("cass_pwd") %>
;;keyspace =


[connection]
hostname = <%= spec.ip %>
port = <%= link("seeds").p("native_transport_port") %>
ssl = <%= link("seeds").p("client_encryption.enabled") %>
request_timeout = 1800

[ssl]
certfile = /var/vcap/jobs/cassandra/config/certs/<%= spec.ip %>_<%= link("seeds").p("cluster_name") %>_CLIENT.cer.pem
validate = <%= link("seeds").p("validate_ssl_TF") %>
userkey = /var/vcap/jobs/cassandra/config/certs/<%= spec.ip %>_<%= link("seeds").p("cluster_name") %>_CLIENT.key.pem
usercert = /var/vcap/jobs/cassandra/config/certs/<%= spec.ip %>_<%= link("seeds").p("cluster_name") %>_CLIENT.cer.pem

