[authentication]
username = cassandra
password = <%= p("cass_pwd") %>
;;keyspace = 


[connection]
hostname = <%=spec.ip%>
port = <%= p('native_transport_port') %>
ssl = <%= p("client_encryption.enabled") %>
request_timeout = 1800

[ssl]
certfile = /var/vcap/jobs/cassandra/config/certs/<%=spec.ip%>_<%= p("cluster_name") %>_CLIENT.cer.pem
validate = <%= p("validate_ssl_TF") %>
userkey = /var/vcap/jobs/cassandra/config/certs/<%=spec.ip%>_<%= p("cluster_name") %>_CLIENT.key.pem
usercert = /var/vcap/jobs/cassandra/config/certs/<%=spec.ip%>_<%= p("cluster_name") %>_CLIENT.cer.pem

